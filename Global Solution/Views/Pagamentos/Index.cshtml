@model IEnumerable<Global_Solution.Models.cy_pagamentos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.informacoesCartao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataPagamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.informacoesCartao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPagamento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPagamento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPagamento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
